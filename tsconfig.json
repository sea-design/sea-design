{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "sea-design": ["components/index.tsx"],
      "sea-design/es/*": ["components/*"]
    },
    "strictNullChecks": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "preserve",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "target": "es6",
    "lib": ["dom", "es2017"],
    "skipLibCheck": true,
    "jsxImportSource": "@emotion/react"
  },
  "include": ["types"],
  "exclude": ["node_modules", "lib", "es"]
}
